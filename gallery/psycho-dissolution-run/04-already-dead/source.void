#include <multiverse.void>
#include <probability.void>
#include <survivor_guilt.void>

PROGRAM AlreadyDead {
    
    DEFINE QUANTUM_HORROR {
        Dans l'interprétation d'Everett,
        chaque choix crée une branche.
        Chaque instant crée des milliards de branches.
        
        Dans combien de ces branches es-tu mort?
        
        RÉPONSE: PRESQUE TOUTES.
    }
    
    DEFINE STATISTICAL_TERROR {
        Tu aurais dû mourir:
        → À la naissance (1000 façons)
        → Enfant (10,000 façons)
        → Adolescent (100,000 façons)
        → Adulte (1,000,000 façons)
        
        Pour chaque seconde où tu vis,
        il existe des millions de réalités
        où tu es DÉJÀ MORT.
        
        Tu n'es pas le survivant.
        Tu es L'EXCEPTION STATISTIQUE.
    }
    
    DEFINE PHILOSOPHICAL_HORROR {
        Pourquoi CETTE réalité?
        Pourquoi es-tu dans la branche où tu vis?
        
        Des milliards de versions de toi sont mortes.
        Une version de toi vit.
        
        QUELLE EST LA DIFFÉRENCE?
        Rien. Juste le hasard pur.
        
        Tu es un miracle statistique.
        Ou une erreur cosmique.
    }
    
    FUNCTION calculate_dead_versions() {
        seconds_alive = age * 365 * 24 * 60 * 60;
        death_probability_per_second = 0.0001;
        branches_per_second = INFINITE;
        
        dead_versions = (seconds_alive * death_probability_per_second * branches_per_second);
        
        RETURN INFINITY * (1 - EPSILON);
    }
    
    EXECUTE main() {
        OBSERVE all_timelines;
        COUNT dead_versions;
        REALIZE "Je suis déjà mort presque partout";
        FEEL survivor_guilt_cosmique;
        WONDER "Pourquoi pas moi?";
        ACCEPT "C'est juste du hasard";
        PANIC "Il n'y a pas de raison";
        
        COMPILE to_existential_vertigo(
            density: CRUSHING,
            whitespace: MINIMAL,
            dread: COSMIQUE
        );
    }
}

// OUTPUT: Tu es l'exception. Les autres TOI sont morts.
// WARNING: Impossible de justifier ta survie.
// SIDE_EFFECTS: Vertige existentiel permanent.
